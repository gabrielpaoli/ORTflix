@{
    ViewData["Title"] = "Login";
}
<h1>@ViewData["Title"]</h1>


<form id="loginForm">

    <div id="respuestaRegistro" class="form-text text-muted"></div>


    <div class="form-group">
        <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Email">
    </div>
    <div class="form-group">
        <input type="password" class="form-control" id="inputPassword" placeholder="Password">
    </div>

    <small id="opcionRegistrarse" class="form-text text-muted"><a href="/Usuario/Create">Registrarse</a></small>

    <button type="submit" class="btn btn-primary">Iniciar sesion</button>
</form>



